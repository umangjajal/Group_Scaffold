# =========================
# Backend configuration
# =========================
PORT=4000
NODE_ENV=development

# Database
MONGO_URL=mongodb://localhost:27017/group_scaffold

# Auth
JWT_SECRET=replace-with-a-long-random-secret

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# OTP / Email (use Gmail app password or SMTP creds)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your-email-app-password
EMAIL_FROM="Realtime Group <your-email@gmail.com>"

# Optional raw SMTP fallback

# OTP delivery timeout (milliseconds)
OTP_DELIVERY_TIMEOUT_MS=20000

# SMS / Twilio (optional)
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

# =========================
# Frontend configuration
# =========================
# Vite API base URL
VITE_API_URL=http://localhost:4000

# Optional explicit websocket URL; defaults to VITE_API_URL if omitted
VITE_API_WS_URL=http://localhost:4000
