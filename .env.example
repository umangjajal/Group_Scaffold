# =========================
# Backend (backend/.env)
# =========================
NODE_ENV=development
PORT=4000
MONGO_URL=mongodb://127.0.0.1:27017/group_scaffold
JWT_SECRET=replace_with_long_random_secret

# CORS
CORS_ORIGINS=http://localhost:5173

# Redis (scaling + distributed socket state)
REDIS_URL=redis://127.0.0.1:6379
SOCKET_REDIS_ENABLED=false

# OTP / Email
OTP_DELIVERY_TIMEOUT_MS=20000
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_APP_PASSWORD=your_email_app_password
EMAIL_FROM=Realtime Group <your_email@gmail.com>

# SMS
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_AUTH=
TWILIO_FROM=
TWILIO_PHONE=

# Secure code execution (container runner)
CODE_RUNNER_IMAGE=node:20-alpine
CODE_RUNNER_TIMEOUT_MS=6000
CODE_RUNNER_MEMORY_MB=128
GIT_REPO_PATH=/opt/render/project/src

# =========================
# Frontend (frontend/.env)
# =========================
VITE_API_URL=http://localhost:4000
VITE_TURN_URL=
VITE_TURN_USER=
VITE_TURN_PASS=
