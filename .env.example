# =========================
# Backend (backend/.env)
# =========================
NODE_ENV=development
PORT=4000
MONGO_URL=mongodb://127.0.0.1:27017/group_scaffold
JWT_SECRET=replace_with_long_random_secret

# CORS (comma-separated allowed origins)
CORS_ORIGINS=http://localhost:5173

# OTP delivery timeout (ms)
OTP_DELIVERY_TIMEOUT_MS=20000

# Email OTP (choose either Gmail app-password flow or SMTP flow)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_APP_PASSWORD=your_email_app_password
EMAIL_FROM=Realtime Group <your_email@gmail.com>

# Optional SMTP fallback
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Twilio SMS OTP (optional)
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

# =========================
# Frontend (frontend/.env)
# =========================
VITE_API_URL=http://localhost:4000

# Optional TURN server for production WebRTC reliability
VITE_TURN_URL=
VITE_TURN_USER=
VITE_TURN_PASS=
